echo "clean db first.."
mongo tool_test_db --eval "db.dropDatabase()"

JAR="../target/scala-2.9.2/mongo-migrator_2.9.2-0.1-SNAPSHOT-one-jar.jar"

echo "first run"
java -jar $JAR migrate v1 mongodb://localhost/tool_test_db test-one

echo "copy over another script file"
cp test-one-scripts/002_rename_users.js test-one/

java -jar $JAR migrate v2 mongodb://localhost/tool_test_db test-one

echo "copy over another script file"
cp test-one-scripts/003_add_orgs.js test-one/

java -jar $JAR migrate v3 mongodb://localhost/tool_test_db test-one

echo "copy over another script file"
cp test-one-scripts/004_rename_orgs.js test-one/

java -jar $JAR migrate v4 mongodb://localhost/tool_test_db test-one

echo "--> version"
java -jar $JAR versions mongodb://localhost/tool_test_db
